<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <PreferenceCategory 
        android:title="Favorite Flavor"
        android:key="favorite_flavor">
        
        <ListPreference 
            android:key="updates_interval"
            android:title="Favorite Flavor"
            android:summary="Pick your favorite flavor for Push notifications."
            android:defaultValue="1000" 
            android:entries="@array/flavors"
            android:entryValues="@array/flavorValues"
            android:dependency="perform_updates"
        />    
            
    </PreferenceCategory>

</PreferenceScreen>
